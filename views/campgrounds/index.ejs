<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class=container"">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <p>
        <a class="btn btn-primary btn-sm" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <% campgrounds.forEach(function (campground){ %>
      <div class="col-md-3 col-sm-6">
        <div class="figure">
          <div class="figure-caption">
            <h3><%= campground["name"] %></h3>
          </div>
          <img class="figure-img img-fluid img-thumbnail" src="<%= campground["image"] %>" alt="<%= campground["name"] %>">
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More information</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
