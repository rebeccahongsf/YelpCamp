<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 style="text-align: center;">Create a New Campground</h1>
    </div>
    <div style="width: 30%; margin: 35px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name"  placeholder="Camp name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image"  placeholder="Image Url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description"  placeholder="Short Description">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-sm btn-block">Submit</button>
        </div>
      </form>
      <p><a href="/campgrounds">Go Back</a></p>
    </div>
    
  </div>
</div>


<% include ../partials/footer %>
