<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <!-- map here -->
    <div class="col-md-9">
      <div class="card">
        <img  class="card-img-top img-fluid" src="<%= campground.image %>" alt="<%= campground.name %>" />
        <div class="card-body">
          <h4 class="float-right">$9.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><em>Submited by <strong><%= campground.author.username %></strong></em></p>
          <p><%= campground.description %></p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
            <a class="btn btn-outline-success btn-sm" href="/campgrounds/<%= campground._id %>/edit"> Edit</a>
            <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
      <div>
        <div class="card">
          <div class="card-body">
            <div class="text-right">
              <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
            </div>
          </div>
          <% campground.comments.forEach(function(comment){ %>
              <div class="row">
                <div class="col-md-12">
                  <div class="card-body">
                    <strong><%= comment.author.username %></strong>
                    <span class="float-right">10 Days ago</span>
                    <p><%= comment.text %></p>
                    <a class="btn btn-success btn-sm" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                  </div>
                </div>
              </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
